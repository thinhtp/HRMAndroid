<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="horizontal"
    >



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLeaveAppNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave application 1"/>
        <TextView
            android:id="@+id/txtLeaveAppStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Start Date"/>

        <TextView
            android:id="@+id/txtLeaveAppEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave End Date"/>

        <TextView
            android:id="@+id/txtLeaveAppManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee Manager"/>

        <TextView
            android:id="@+id/txtLeaveApptype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave application type"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.25">

        <TextView
            android:id="@+id/txtLeaveAppNumberOfLeaves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"/>
        <TextView
            android:id="@+id/txtLeaveAppStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Status"/>

    </LinearLayout>


</LinearLayout>